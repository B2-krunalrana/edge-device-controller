# Edge Device Controller Configuration

# Server Settings
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=info

# Cloudflare Tunnel Settings
TUNNEL_PROTOCOL=http
TUNNEL_PORT=80

# Optional: Use a specific domain instead of trycloudflare.com
# CLOUDFLARE_DOMAIN=yourdomain.com
# CLOUDFLARE_TOKEN=your_token_here

# Optional: WebSocket Settings
WS_MAX_SIZE=16MB
WS_PING_INTERVAL=20
WS_PING_TIMEOUT=20

# Optional: CORS Settings
CORS_ORIGINS=*
CORS_CREDENTIALS=true
CORS_METHODS=*

# Optional: Logging
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
